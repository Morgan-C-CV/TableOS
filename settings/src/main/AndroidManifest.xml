<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 提升可见性：声明可查询的蓝牙设置意图与系统设置包 -->
    <queries>
        <intent>
            <action android:name="android.settings.BLUETOOTH_SETTINGS" />
        </intent>
        <package android:name="com.android.settings" />
        <!-- Android TV / Google TV 设置包：用于 Remotes & Accessories 页面回退 -->
        <package android:name="com.android.tv.settings" />
        <package android:name="com.google.android.tv.settings" />
    </queries>

    <application
        android:allowBackup="true"
        android:label="Settings"
        android:icon="@drawable/ic_settings_gear"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".SettingsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>