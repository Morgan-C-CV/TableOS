<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 右侧停靠的 App Bar 占屏幕宽度的 10% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!-- 照明区域：仅背景占位，默认白色，占 90% 宽度 -->
    <View
        android:id="@+id/lighting_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_95" />

    <!-- 右侧 App Bar 容器：占 10% 宽度，靠右侧 -->
    <LinearLayout
        android:id="@+id/right_app_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#101317"
        android:padding="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_95"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 所有应用图标列表，位于右侧 App Bar 内 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/apps_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:clipToPadding="false"
            android:focusable="true"
            android:focusableInTouchMode="true" />
    </LinearLayout>

    <!-- 桌面矫正遮罩：置于顶层，仅保留矫正后的多边形区域显示 -->
    <com.tableos.app.KeystoneOverlayView
        android:id="@+id/keystone_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>