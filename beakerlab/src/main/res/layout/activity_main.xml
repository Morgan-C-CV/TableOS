<?xml version="1.0" encoding="utf-8"?>
<com.tableos.beakerlab.KeystoneWarpLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keystone_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 亮度区域：作为背景并可获取焦点，通过上下键调节亮度 -->
        <View
            android:id="@+id/lighting_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true" />

        <com.tableos.beakerlab.BeakerCanvasView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/add_card_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加卡牌"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp" />

    </FrameLayout>

</com.tableos.beakerlab.KeystoneWarpLayout>