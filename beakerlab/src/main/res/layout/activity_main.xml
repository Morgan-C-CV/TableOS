<?xml version="1.0" encoding="utf-8"?>
<com.tableos.beakerlab.KeystoneWarpLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keystone_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 亮度区域：作为背景并可获取焦点，通过上下键调节亮度 -->
        <View
            android:id="@+id/lighting_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true" />

        <!-- 相机预览 -->
        <TextureView
            android:id="@+id/camera_texture_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7" />

        <com.tableos.beakerlab.BeakerCanvasView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/add_card_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加卡牌"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp" />

        <Button
            android:id="@+id/test_shape_detection_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试形状检测"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp" />

        <!-- 反应状态显示 -->
        <TextView
            android:id="@+id/reaction_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="16dp"
            android:background="@drawable/reaction_status_background"
            android:padding="16dp"
            android:text="🔬 等待化学反应..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:minWidth="200dp"
            android:elevation="8dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- 用于显示检测结果的 ImageView -->
        <ImageView
            android:id="@+id/detection_result_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:background="#80000000"
            android:scaleType="fitCenter"
            android:visibility="gone" />

    </FrameLayout>

</com.tableos.beakerlab.KeystoneWarpLayout>